<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_launcher_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">
          <TextView
            android:id="@+id/tv1"
            android:text="Tab1"
            android:background="#1b61da"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv2"
            android:text="Tab2"
            android:background="#1348a2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/r01"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#1348a2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"/>
    <TextView
        android:id="@+id/r02"
        android:background="#1348a2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/r03"
        android:layout_alignBottom="@id/r03"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/r03"
        android:background="#ffd04e"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/r01"
        android:layout_alignBottom="@id/r01"
        android:layout_marginLeft="20dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv3"
            android:background="#383737"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv4"
                    android:background="#c30000"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv5"
                    android:background="#a60000"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv6"
                    android:background="#910303"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv7"
                    android:background="#600202"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv8"
                    android:background="#4f0000"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="0dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv12"
                android:gravity="top|center"
                android:text="Text"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="50dp"
                android:layout_gravity=""
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv13"
                android:gravity="top|center"
                android:text="Text"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="50dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv14"
                android:gravity="top|center"
                android:text="Text"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="50dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv15"
                android:gravity="top|center"
                android:text="Text"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="50dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv16"
                android:gravity="top|center"
                android:text="Text"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="50dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>

